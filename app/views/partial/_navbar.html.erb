<div class="container">
<header class="header">
      <heading class="heading">
        <%= link_to("Delivery App", "/", {class: "heading-delivery-app"} ) %>
      </heading>
      <div class="navbar">
        <ul class="nav-lists">
          <%# 飛行機マーク 新規投稿 %>
          <%= link_to new_post_path, :method => :get do %>
            <li class="light three"><i class="fa fa-paper-plane fa-3x fa-sandybrown"></i></li>
          <% end %>
          <%# ユーザー一覧 %>
          <%= link_to users_path, :method => :get do %>
            <li class="light three"><i class="fa fa-users fa-3x fa-sandybrown"></i></li>
          <% end %>

          <%# メニュー ドロップダウン %>
          <li class="menu three">
            <div class="dropdown">
            	<button class="btn btn-default dropdown-toggle" type="button" data-toggle="dropdown">
            		MENU
            		<span class="caret"></span>
            	</button>
              <ul class="dropdown-menu" role="menu">
                <%# マイページ %>
              	<%= link_to user_path(current_user), method: :get do %>
                  <li role="presentation">マイページ</li>
                <% end %>

                <%# 編集 %>
                <%= link_to edit_user_registration_path, method: :get do %>
              	  <li role="presentation">編集</li>
                <% end %>

                <%# 新規投稿 %>
                <%= link_to new_post_path, :method => :get do %>
              	  <li role="presentation">新規投稿</li>
                <% end %>

                <%# ユーザー一覧 %>
                <%= link_to users_path, :method => :get do %>
              	  <li role="presentation">ユーザー一覧</li>
                <% end %>

                <%# ログアウト %>
              	<li role="presentation">
                  <%= link_to "ログアウト", destroy_user_session_path, method: :delete %>
                </li>
              </ul>
            </div>
          </li>
        </ul>
      </div>
    </header>
</div>
