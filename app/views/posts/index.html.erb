<div>
<%# 検索機能 %>
  <div class="search">
    <%= search_form_for @q do |f| %>
      <%= f.label :food_name, "食べ物名:" %>
      <%= f.search_field :food_name_cont %>
      <%= f.label :store_name, "店名:" %>
      <%= f.search_field :store_name_cont %>

      <%= f.submit "検索" %>
    <% end %>
  </div>
<%# 投稿一覧 %>
  <div class="post">
    <div class="grand-wrap">
      <% @posts.each do |post| %>
        <div class="parent-wrap col-md-4">
            <%# 画像 %>
            <div class="child-wrap post-image">
              <%= link_to(post_path(post)) do %>
                <%= image_tag post.photos.first.image.url(:medium), class: "card-img-top" %>
              <% end %>
            </div>
            <%# 画像の下 %>
            <table class="table">
              <tbody>
                <tr>
                    <th>食べ物名:<%= post.food_name %></th>
                </tr>
                <tr>
                    <th>店名:<%= post.store_name %></th>
                </tr>
                <tr>
                    <th>❤️ (<%= post.liked_users.count %>)</th>
                </tr>
                <tr>
                    <th></th>
                </tr>
              </tbody>
            </table>
        </div>
      <% end %>
    </div>
  </div>
<%# ページネーション %>
  <div class="pagenation">
    <div class="paginate">
      <%= paginate @posts %>
    </div>
  </div>

</div>



